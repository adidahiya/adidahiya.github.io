{
    "extends": "@blueprintjs/tslint-config",
    "rules": {
        "blueprint-classes-constants": false,
        "blueprint-html-components": false,
        "file-header": false,
        "no-default-export": false,
        "no-implicit-dependencies": true,
        "no-unused-expression": true,
        "prettier": {
            "options": {
                "printWidth": 100,
                "tabWidth": 4,
                "trailingComma": "all"
            }
        }
    }
}
